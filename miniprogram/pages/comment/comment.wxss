/* pages/comment/comment.wxss */
.detail_container{
  height: 400rpx;
  width: 100%;
  filter: blur(40rpx);
  opacity: .4;
}
.datail-mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background: #333;
  top: 0;
  left: 0;
  z-index: -1;
}
.detail-info{
  position: absolute;
  top: 0;
  left: 0;
  height: 400rpx;
  width: 100%;
  z-index: 10;
}
.detail_img_detail{
  display: flex;
  padding: 5px;
}
.datail-img{
  height: 380rpx;
  width: 250rpx;
  margin-right: 10px;
}
.images_box{
  display: flex;
}
.img_item{
  width: 150rpx;
  height: 150rpx;
}